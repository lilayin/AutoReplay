{

  "manifest_version": 2,
  "name": "AutoReplay",
  "version": "1.0",

  "description": "AutoReplay",

  "icons": {
    "48": "icons/border-48.jpeg"
  },

  "permissions": [
    "activeTab","sessions","alarms","webRequest","tabs","*://crm.meierbei.com/*"
  ],

  "browser_action": {
    "default_icon": "icons/border-48.jpeg",
    "default_title": "自动回复",
    "default_popup": "popup/index.html"
  }

}
