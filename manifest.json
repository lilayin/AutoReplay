{

  "manifest_version": 2,
  "name": "AutoReplay",
  "version": "1.0",

  "description": "AutoReplay",

  "icons": {
    "16": "icons/robot.jpeg",
    "48": "icons/robot.jpeg",
    "128": "icons/robot.jpeg"
  },

  "permissions": [
    "activeTab","sessions","alarms","webRequest","tabs","*://crm.meierbei.com/*"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/robot.jpeg",
      "48": "icons/robot.jpeg",
      "128": "icons/robot.jpeg"

    },
    "default_title": "自动回复",
    "default_popup": "popup/index.html"
  }
}
