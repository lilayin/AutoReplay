{

  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/border-48.jpeg"
  },

  "permissions": [
    "activeTab","sessions","alarms","webRequest", "tabs"
  ],

  "browser_action": {
    "default_icon": "icons/border-48.jpeg",
    "default_title": "自动回复",
    "default_popup": "popup/index.html"
  }

}
